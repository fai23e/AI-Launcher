{
  "manifest_version": 3,
  "name": "AI Launcher",
  "version": "2.0",
  "description": "ショートカットキーで特定のサイトを専用ウィンドウで開く",
  "permissions": ["commands", "storage", "windows", "system.display"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.htm",
  "commands": {
    "open_launcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "ランチャーを開く"
    }
  },
  "action": {
    "default_popup": "launcher.htm"
  }
}
